.container
  .col.col-lg-6.offset-3
    %h2 Edit your game
    = form_for(@game) do |f|
      = render "layouts/errors", :target => @game
      .field
        = f.label :address, :class => "col-form-label"
        = f.text_field :address, autofocus: true, autocomplete: "name", :class => "form-control"
      .field
        = f.label :team_one_name, :class => "col-form-label"
        = f.text_field :team_one_name, autofocus: true, autocomplete: "name", :class => "form-control "
      .field
        = f.label :team_two_name, :class => "col-form-label"
        = f.text_field :team_two_name, autofocus: true, autocomplete: "email", :class => "form-control "
      .field
        = f.label :team_one_score, :class => "col-form-label"
        = f.number_field :team_one_score, autofocus: true, autocomplete: "name", :class => "form-control "
      .field
        = f.label :team_two_score, :class => "col-form-label"
        = f.number_field :team_two_score, autofocus: true, autocomplete: "email", :class => "form-control "
        = f.hidden_field :creator_id, :value => current_user.id
      .actions
        %br
        = f.submit "Submit", :class => "btn btn-primary"