.container
  .col.col-lg-6.offset-3
    %h2 Create a new game
    = form_for(@game) do |f|
      = render "layouts/errors", :target => @game
      .field
        = f.label :title, :class => "col-form-label"
        = f.text_field :title, autofocus: true, autocomplete: "name", :class => "form-control"
      .field
        = f.label :description, :class => "col-form-label"
        = f.text_field :description, autofocus: true, autocomplete: "name", :class => "form-control"
      .field
        = f.label :address, :class => "col-form-label"
        = f.text_field :address, autofocus: true, autocomplete: "name", :class => "form-control"
      .field
        = f.label :team_one_name, :class => "col-form-label"
        = f.text_field :team_one_name, autofocus: true, autocomplete: "name", :class => "form-control "
      .field
        = f.label :team_two_name, :class => "col-form-label"
        = f.text_field :team_two_name, autofocus: true, autocomplete: "email", :class => "form-control "
        = f.hidden_field :creator_id, :value => current_user.id
      .field
        = f.label :start_time, :class => "col-form-label"
        = f.datetime_field :start_time, :value => Time.now, autofocus: true, :class => "form-control "
      .actions
        %br
        = f.submit "Submit", :class => "btn btn-primary"